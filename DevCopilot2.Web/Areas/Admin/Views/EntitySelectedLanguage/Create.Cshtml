@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<SharedResources> SharedLocalizer
@inject IHtmlLocalizer<EntitiesSharedResources> SharedEntitiesLocalizer
@using System
@using System.ComponentModel.DataAnnotations
@using DevCopilot2.Domain.DTOs.Entities
@model CreateEntitySelectedLanguageDto
@{
	ViewData["Title"] = $@"{SharedLocalizer.GetString("Create New")} {SharedEntitiesLocalizer.GetString("EntitySelectedLanguage")}";

    List<SelectListItem> languages = ViewData["Languages"] as List<SelectListItem>;    

}

<nav class="mb-3" aria-label="breadcrumb">
    <ol class="breadcrumb mb-0">

        <li class="breadcrumb-item"><a asp-area="Admin"
                                  asp-controller="Home"
                                  asp-action="Index" 
                                   title="@SharedLocalizer.GetString("Admin")">@SharedLocalizer.GetString("Admin")</a></li>
<li class="breadcrumb-item"><a asp-area="Admin"
                                  asp-controller="EntitySelectedLanguage"
                                  asp-action="Index" 

                                asp-route-entityIdId="@Model.EntityId" title="@SharedEntitiesLocalizer.GetString("EntitySelectedLanguages")">@SharedEntitiesLocalizer.GetString("EntitySelectedLanguages")</a></li>

        <li class="breadcrumb-item active">@SharedLocalizer.GetString("Create New") @SharedEntitiesLocalizer.GetString("EntitySelectedLanguage")</li>
    </ol>   
</nav>
<form class="mb-9" method="post" 
                            asp-area="Admin" asp-controller="EntitySelectedLanguage" asp-action="Create"
                            enctype="multipart/form-data">

    <div class="row justify-content-between align-items-end g-3 mb-5">
        <div class="col-12 col-sm-auto col-xl-8">
            <h2 class="mb-0">@SharedLocalizer.GetString("Create New") @SharedEntitiesLocalizer.GetString("EntitySelectedLanguage")</h2>
        </div>
        <div class="col-12 col-sm-auto col-xl-4">
            <div class="d-flex">
                                <button class="btn btn-primary px-5 w-100 text-nowrap">@SharedLocalizer.GetString("Create New") @SharedEntitiesLocalizer.GetString("EntitySelectedLanguage")</button>
            </div>
        </div>
    </div>
    <div class="row g-5">

                <input type="hidden" asp-for="@Model.EntityId" class=""
                       />
<div class="col-sm-12 col-md-6">
    <div class="form-floating">
        <select class="form-select"  asp-for="@Model.LanguageId"  asp-items="languages" >

        </select>
        <label asp-for="@Model.LanguageId"></label>
    </div>
    <span asp-validation-for="@Model.LanguageId"></span>
</div>
<div class="col-sm-12 col-md-6">
    <div class="form-floating">
        <input class="form-control Title-input"  asp-for="@Model.SingularTitle"  placeholder="" />
        <label asp-for="@Model.SingularTitle"></label>
    </div>
    <span asp-validation-for="@Model.SingularTitle"></span>
</div>
<div class="col-sm-12 col-md-6">
    <div class="form-floating">
        <input class="form-control Title-input"  asp-for="@Model.PluralTitle"  placeholder="" />
        <label asp-for="@Model.PluralTitle"></label>
    </div>
    <span asp-validation-for="@Model.PluralTitle"></span>
</div>

    </div>
</form>

@section Scripts
{
	<script src="/Shared/JqueryValidation.min.js"></script>
	<script>
		$(document).ready(function (e) {
			$('.EntitySelectedLanguagesManagement').addClass('active');
            $('.EntitySelectedLanguagesManagement').addClass('show');
		});
	</script>
}
