
@using System;

@using DevCopilot2.Domain.DTOs.Roles;


@model UpdateRoleDto
@{
	ViewData["Title"] = "ویرایش نقش";

    List<SelectListItem> permissions = ViewData["Permissions"] as List<SelectListItem>;
}

<nav class="mb-3" aria-label="breadcrumb">
    <ol class="breadcrumb mb-0">
 <li class="breadcrumb-item">
     <a asp-area="Admin"
        asp-controller="Home"
        asp-action="Index"
        title="ادمین">ادمین</a>
 </li>

                <li class="breadcrumb-item"><a asp-area="Admin"
                                  asp-controller="Role"
                                  asp-action="Index" title="نقش ها">نقش ها</a></li>
        <li class="breadcrumb-item active">ویرایش نقش</li>
    </ol>   
</nav>
<form class="mb-9" method="post" 
                            asp-area="Admin" asp-controller="Role" asp-action="Update"
                            enctype="multipart/form-data">
    <input type="hidden" asp-for="@Model.Id" />

    <div class="row justify-content-between align-items-end g-3 mb-5">
        <div class="col-12 col-sm-auto col-xl-8">
            <h2 class="mb-0">ویرایش نقش</h2>
        </div>
        <div class="col-12 col-sm-auto col-xl-4">
            <div class="d-flex">
                                <button class="btn btn-primary px-5 w-100 text-nowrap">ویرایش نقش</button>
            </div>
        </div>
    </div>
    <div class="row g-5">

                <div class="col-sm-12 col-md-6">
    <div class="form-floating">
        <input class="form-control Title-input" asp-for="@Model.Title"  placeholder="" />
        <label asp-for="@Model.Title"></label>
    </div>
    <span asp-validation-for="@Model.Title"></span>
</div>

              <div class="col-sm-12 col-md-6 gy-6">
                <div class="form-floating form-floating-advance-select">
                  <label asp-for="@Model.PermissionIds"></label>
                  <select class="form-select" data-choices="data-choices" 
                          data-options=''
                          asp-for="@Model.PermissionIds"
                          asp-items="permissions" multiple
                          >

                  </select>
                </div>
                <span asp-validation-for="@Model.PermissionIds"></span>
              </div>

    </div>
</form>

@section Scripts
{
	<script src="/Shared/JqueryValidation.min.js"></script>
	<script>
		$(document).ready(function (e) {
			$('.RolesManagement').addClass('active');
            $('.RolesManagement').addClass('show');
		});
	</script>
}
