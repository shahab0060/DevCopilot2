
@using System;

@using DevCopilot2.Domain.DTOs.Roles;


@model RoleListDto
@{
	ViewData["Title"] = "جزئیات نقش";
    List<SelectListItem> permissions = ViewData["Permissions"] as List<SelectListItem>;
}

<nav class="mb-3" aria-label="breadcrumb">
    <ol class="breadcrumb mb-0">
 <li class="breadcrumb-item">
     <a asp-area="Admin"
        asp-controller="Home"
        asp-action="Index"
        title="ادمین">ادمین</a>
 </li>

                <li class="breadcrumb-item"><a asp-area="Admin"
                                  asp-controller="Role"
                                  asp-action="Index" title="نقش ها">نقش ها</a></li>
        <li class="breadcrumb-item active">جزئیات نقش</li>
    </ol>   
</nav>
<form class="mb-9" method="post" >

    <div class="row justify-content-between align-items-end g-3 mb-5">
        <div class="col-12 col-sm-auto col-xl-8">
            <h2 class="mb-0">جزئیات نقش</h2>
        </div>
        <div class="col-12 col-sm-auto col-xl-4">
            <div class="d-flex">
                <a class="btn btn-primary px-5 w-100 text-nowrap" asp-area="Admin"
                                  asp-controller="Role"
                                  asp-action="Index">بستن</a>
            </div>
        </div>
    </div>
    <div class="row g-5">

                <div class="col-sm-12 col-md-6">
    <div class="form-floating">
        <input disabled class="form-control Title-input" asp-for="@Model.Title"  placeholder="" />
        <label asp-for="@Model.Title"></label>
    </div>
    <span asp-validation-for="@Model.Title"></span>
</div>

              <div class="col-sm-12 col-md-6 gy-6">
                <div class="form-floating form-floating-advance-select">
                  <label asp-for="@Model.PermissionIds"></label>
                  <select disabled class="form-select" data-choices="data-choices" 
                          data-options=''
                          asp-for="@Model.PermissionIds"
                          asp-items="permissions" multiple
                          >

                  </select>
                </div>
                <span asp-validation-for="@Model.PermissionIds"></span>
              </div>

                    <div class="col-sm-12 col-md-6">
            <div class="form-floating">
                <input disabled disabled class="form-control" value="@Model.CreateDate.ToShamsi()" asp-for="@Model.CreateDate" type="text" placeholder="" />
                <label asp-for="@Model.CreateDate"></label>
            </div>
            <span asp-validation-for="@Model.CreateDate"></span>
        </div>
        <div class="col-sm-12 col-md-6">
            <div class="form-floating">
                <input disabled disabled class="form-control" value="@Model.LatestEditDate.ToShamsi()" asp-for="@Model.LatestEditDate" type="text" placeholder="" />
                <label asp-for="@Model.LatestEditDate"></label>
            </div>
            <span asp-validation-for="@Model.LatestEditDate"></span>
        </div>
        <div class="col-sm-12 col-md-6">
            <div class="form-floating">
                <input disabled disabled class="form-control" asp-for="@Model.EditCounts" type="number" placeholder="" />
                <label asp-for="@Model.EditCounts"></label>
            </div>
            <span asp-validation-for="@Model.EditCounts"></span>
        </div>

    </div>
</form>

@section Scripts
{
	<script>
		$(document).ready(function (e) {
			$('.RolesManagement').addClass('active');
            $('.RolesManagement').addClass('show');
		});
	</script>
}
