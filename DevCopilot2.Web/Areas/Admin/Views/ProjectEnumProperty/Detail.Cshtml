@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<SharedResources> SharedLocalizer
@inject IHtmlLocalizer<EntitiesSharedResources> SharedEntitiesLocalizer
@using System
@using System.ComponentModel.DataAnnotations
@using DevCopilot2.Domain.DTOs.Projects
@model ProjectEnumPropertyListDto
@{
	ViewData["Title"] = $"{SharedEntitiesLocalizer.GetString("ProjectEnumProperty")} {SharedLocalizer.GetString("Detail")}";
    List<SelectListItem> languages = ViewData["Languages"] as List<SelectListItem>;
    CreateProjectEnumPropertySelectedLanguageDto createProjectEnumPropertySelectedLanguage = new CreateProjectEnumPropertySelectedLanguageDto();
}

<nav class="mb-3" aria-label="breadcrumb">
    <ol class="breadcrumb mb-0">

        <li class="breadcrumb-item"><a asp-area="Admin"
                                  asp-controller="Home"
                                  asp-action="Index" 
                                   title="@SharedLocalizer.GetString("Admin")">@SharedLocalizer.GetString("Admin")</a></li>
<li class="breadcrumb-item"><a asp-area="Admin"
                                  asp-controller="ProjectEnumProperty"
                                  asp-action="Index" 

                                asp-route-projectEnumId="@Model.ProjectEnumId" title="@SharedEntitiesLocalizer.GetString("ProjectEnumProperties")">@SharedEntitiesLocalizer.GetString("ProjectEnumProperties")</a></li>

