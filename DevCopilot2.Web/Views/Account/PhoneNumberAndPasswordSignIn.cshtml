@using DevCopilot2.Domain.DTOs.Users
@model LoginByPhoneNumberAndPasswordDto
@{
    ViewData["Title"] = "ورود با رمز عبور";
}
<section class="hero py-6 rtl">
    <div class="container">
        <!-- Breadcrumbs -->
        <ol class="breadcrumb ps-0 ">
            <li class="breadcrumb-item">
                <a asp-area=""
                   asp-controller="Home"
                   asp-action="Index" title="خانه">خانه</a>
            </li>
            <li class="breadcrumb-item active">ورود با رمز عبور</li>
        </ol>
        <!-- Hero Content-->
        <div class="hero-content">
            <h1 class="hero-heading">ورود با رمز عبور</h1>
        </div>
    </div>
</section>
<section class="pb-6 rtl">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-xl-12 mb-5 mb-lg-0">
                <h3 class="mb-5">اطلاعات ورود</h3>
                <form asp-area=""
                      asp-controller="Account"
                      asp-action="PhoneNumberAndPasswordSignIn"
                      enctype="multipart/form-data">
                    <input type="hidden" asp-for="@Model.ReturnUrl" />
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="mb-3">
                                <label class="form-label" asp-for="@Model.PhoneNumber"></label>
                                <input class="form-control" asp-for="@Model.PhoneNumber">
                                <span asp-validation-for="@Model.PhoneNumber"></span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="mb-3">
                                <label class="form-label" asp-for="@Model.Password"></label>
                                <input class="form-control" asp-for="@Model.Password">
                                <span asp-validation-for="@Model.Password"></span>
                            </div>
                        </div>
                    </div>
                    <div class="mt-4"></div>
                    <button class="btn btn-dark" type="submit">
                        <i class="far fa-save me-2"></i>ورود
                    </button>
                </form>
            </div>
        </div>
    </div>
</section>